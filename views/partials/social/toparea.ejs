        <form class="edit-phto" action="/upload/image" method="POST"  enctype="multipart/form-data" id="change_avatar_form">
            <i class="fa fa-camera-retro"></i>
            <label class="fileContainer">
                Change Avatar
            <input type="file" id="change_avatar" name="file" accept="image/*" onchange="readURL(this);"/>
            </label>
